# ==========================================
# CONFIGURAÇÃO DE AMBIENTE - EXEMPLO
# ==========================================
# Copie este arquivo para .env.development ou .env.production
# e configure as variáveis apropriadas

# Application
NODE_ENV=development
PORT=3000
NEXTAUTH_URL=http://localhost:3000

# Service Ports
APP_PORT=3000
PGADMIN_PORT=8080
DATABASE_EXTERNAL_PORT=5432
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:your_password@db:5432/simuladores_db
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password
DATABASE_NAME=simuladores_db

# Security (ALTERE EM PRODUÇÃO!)
NEXTAUTH_SECRET=your_nextauth_secret_here_32_chars_minimum
JWT_SECRET=your_jwt_secret_here_32_chars_minimum

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key

# PgAdmin
PGADMIN_DEFAULT_EMAIL=admin@your-domain.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password

# Debug Settings
DEBUG=false
LOG_LEVEL=info

# Features
ENABLE_DEBUG_ROUTES=false
ENABLE_TEST_DATA=false

# ==========================================
# INSTRUÇÕES:
# ==========================================
# 1. Para DESENVOLVIMENTO:
#    cp .env.example .env.development
#    - Use senhas simples
#    - DEBUG=true
#    - ENABLE_DEBUG_ROUTES=true
#
# 2. Para PRODUÇÃO:
#    cp .env.example .env.production
#    - Use senhas FORTES
#    - DEBUG=false
#    - NEXTAUTH_URL com domínio real
#    - Altere TODAS as chaves secretas
# ==========================================